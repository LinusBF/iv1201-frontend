{
  "name": "frontend",
  "version": "1.0.0",
  "description": "A demo of a global application setup",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://source.developers.google.com/p/global-application-example/r/frontend"
  },
  "author": "Linus Bein Fahlander, Melker Mossberg, Erik Lenas",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "husky": "^4.0.10",
    "mocha": "^7.0.0"
  },
  "mocha": {
    "spec": "test/**/*.test.js",
    "recursive": true,
    "exclude": "**/*.local.test.js",
    "require": "dotenv/config",
    "timeout": "20000"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && snyk test --dev && yarn test",
      "post-merge": "yarn install"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@types/chai": "^4.2.7",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "express": "^4.17.1",
    "lint-staged": "^10.0.1",
    "prettier": "^1.19.1",
    "snyk": "^1.279.0"
  }
}
